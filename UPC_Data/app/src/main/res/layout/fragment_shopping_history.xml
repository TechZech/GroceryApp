<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ShoppingHistoryFragment"
    android:background="@drawable/darker_green_fade">

    <TextView
        android:id="@+id/friendTitle"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/GroceryAppGreen_DARK"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="Shopping History"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/LineChart"
        android:layout_width="370dp"
        android:layout_centerHorizontal="true"
        android:layout_height="200dp"
        android:layout_marginTop="80dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvShoppingHistory"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="300dp"
        android:background="@null"/>
</RelativeLayout>