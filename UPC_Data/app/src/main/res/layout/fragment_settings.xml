<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="600dp">

    <RelativeLayout
        android:id="@+id/rlUpper"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:background="@color/GroceryAppGreen_DARK">

        <TextView
            android:id="@+id/tvDisplayName"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="82dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:text="Display Name"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="240dp"
            android:layout_height="44dp"
            android:layout_marginStart="91dp"
            android:layout_marginTop="200dp"
            android:gravity="center"
            android:text="sampleemail@gmail.com"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="138dp"
            android:layout_height="125dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="134dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/ivEditProfile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="240dp"
            android:layout_marginTop="120dp"
            app:srcCompat="@drawable/edit_profile_pic"
            tools:srcCompat="@drawable/edit_profile_pic" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        android:backgroundTint="@color/GroceryAppGreen_DARK"
        android:text="Log Out" />

    <Button
        android:id="@+id/btnSettings1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/rlUpper"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_baseline_edit_24"
        android:drawableRight="@drawable/ic_baseline_edit_24"
        android:text="Edit Profile"
        android:textAlignment="gravity"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btnSettings2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/btnSettings1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-9dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_baseline_delete_forever_24"
        android:drawableRight="@drawable/ic_baseline_delete_forever_24"
        android:text="Clear Inventory"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btnSettings3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/btnSettings2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-9dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_baseline_delete_outline_24"
        android:drawableRight="@drawable/ic_baseline_delete_outline_24"
        android:text="Clear Grocery List"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/friendsButton"
        android:layout_width="142dp"
        android:layout_height="52dp"
        android:layout_below="@+id/btnSettings3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="61dp"
        android:text="Friends"
        app:icon="@drawable/ic_baseline_people_alt_24" />


</RelativeLayout>