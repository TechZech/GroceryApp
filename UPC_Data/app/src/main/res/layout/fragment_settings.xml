<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="615dp">

    <RelativeLayout
        android:id="@+id/rlUpper"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:background="@color/GroceryAppGreen_DARK">

        <TextView
            android:id="@+id/tvDisplayName"
            android:layout_width="241dp"
            android:layout_height="40dp"
            android:layout_below="@+id/ivProfile"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="85dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="85dp"
            android:gravity="center"
            android:text="Display Name"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="241dp"
            android:layout_height="44dp"
            android:layout_below="@+id/tvDisplayName"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="85dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="85dp"
            android:gravity="center"
            android:text="sampleemail@gmail.com"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="143dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="143dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/ivEditProfile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="240dp"
            android:layout_marginTop="120dp"
            app:srcCompat="@drawable/edit_profile_pic"
            tools:srcCompat="@drawable/edit_profile_pic" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="570dp"
        android:backgroundTint="@color/white"
        android:text="Sign Out"
        android:textColor="@color/Sign_Out_Red"
        android:textAlignment="textStart"/>

    <Button
        android:id="@+id/btnSettings1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/rlUpper"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="@color/white"
        android:text="Edit Profile"
        android:textAlignment="textStart"
        android:textColor="@color/black" />



    <Button
        android:id="@+id/btnSettings2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/btnSettings1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-9dp"
        android:backgroundTint="@color/white"

        android:text="Shopping History"
        android:textAlignment="textStart"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btnSettings3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/btnSettings2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-9dp"
        android:backgroundTint="@color/white"
        android:text="Clear Grocery List"
        android:textAlignment="textStart"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/friendsButton"
        android:layout_width="142dp"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="62dp"
        android:text="Friends"
        app:icon="@drawable/ic_baseline_people_alt_24" />

    <Button
        android:id="@+id/searchRequestButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="62dp"
        android:layout_toStartOf="@+id/friendsButton"
        android:text="Search"
        app:icon="?android:attr/actionModeWebSearchDrawable" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="355dp"
        android:layout_marginTop="263dp"
        android:src="@drawable/chevron"
        android:elevation="5dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="355dp"
        android:layout_marginTop="325dp"
        android:src="@drawable/chevron"
        android:elevation="5dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="355dp"
        android:layout_marginTop="385dp"
        android:src="@drawable/chevron"
        android:elevation="5dp"/>

</RelativeLayout>