<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.InnerSettingsFragments.EditProfileFragment">

   <TextView
       android:id="@+id/tvEditUsername"
       android:layout_width="120dp"
       android:layout_height="50dp"
       android:layout_marginStart="50dp"
       android:layout_marginTop="40dp"
       android:layout_marginEnd="16dp"
       android:gravity="center"
       android:text="Edit Username" />

   <TextView
       android:id="@+id/tvEditEmail"
       android:layout_width="120dp"
       android:layout_height="50dp"
       android:layout_marginStart="50dp"
       android:layout_marginTop="140dp"
       android:layout_marginEnd="16dp"
       android:gravity="center"
       android:text="Edit Email" />

   <Button
       android:id="@+id/btnSaveChanges"
       android:layout_width="120dp"
       android:layout_height="60dp"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="500dp"
       android:layout_marginEnd="50dp"
       android:text="SAVE CHANGES" />

   <EditText
       android:id="@+id/etEditUsername"
       android:layout_width="150dp"
       android:layout_height="50dp"
       android:layout_alignParentEnd="true"
       android:layout_marginStart="40dp"
       android:layout_marginTop="50dp"
       android:layout_marginEnd="75dp"
       android:text="" />

   <EditText
       android:id="@+id/etEditEmail"
       android:layout_width="150dp"
       android:layout_height="50dp"
       android:layout_alignParentEnd="true"
       android:layout_marginStart="40dp"
       android:layout_marginTop="150dp"
       android:layout_marginEnd="75dp"
       android:text="" />

   <View
       android:id="@+id/divider"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="?android:attr/listDivider"
       android:layout_marginTop="110dp"/>

   <View
       android:id="@+id/divider2"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:layout_marginTop="220dp"
       android:layout_marginBottom="29dp"
       android:background="?android:attr/listDivider" />

   <Button
       android:layout_width="220dp"
       android:layout_height="50dp"
       android:layout_marginTop="250dp"
       android:layout_marginStart="90dp"
       android:text="Reset Password"
       android:id="@+id/btnResetPassword"
       />

   <Button
       android:id="@+id/btnDeleteAccount"
       android:layout_width="220dp"
       android:layout_height="50dp"
       android:text="Delete Account"
       android:layout_marginTop="355dp"
       android:layout_marginStart="90dp"/>


   <View
       android:id="@+id/divider3"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:layout_marginTop="320dp"
       android:background="?android:attr/listDivider" />

   <View
       android:id="@+id/divider4"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="?android:attr/listDivider"
       android:layout_marginTop="430dp"/>


</RelativeLayout>