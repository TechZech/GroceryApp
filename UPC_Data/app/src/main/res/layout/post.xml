<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/white"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="5dp"
    android:elevation="7dp">

<RelativeLayout
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/post_container">

    <TextView
        android:id="@+id/tvUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/imageView"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="@font/robotolight"/>

    <TextView
        android:id="@+id/justadded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUser"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="-17dp"
        android:layout_toEndOf="@+id/tvUser"
        android:gravity="center"
        android:text="just added"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:fontFamily="@font/robotolight"/>

    <TextView
        android:id="@+id/totheirlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvItemName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/imageView"
        android:gravity="center"
        android:text="to their "
        android:textColor="@color/black"
        android:textSize="12sp"
        android:fontFamily="@font/robotolight"/>

    <TextView
        android:id="@+id/tvListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvItemName"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/totheirlist"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="@font/robotolight"/>

    <TextView
        android:id="@+id/tvItemName"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/justadded"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/imageView"
        android:fontFamily="@font/robotolight"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="86dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="9dp"
        card_view:srcCompat="@drawable/glistappicon" />

    <Button
        android:id="@+id/acceptButton"
        android:layout_width="62dp"
        android:layout_height="40dp"
        android:layout_below="@+id/totheirlist"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="219dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="19dp"
        android:layout_toEndOf="@+id/imageView"
        android:textSize="10sp"
        card_view:icon="@android:drawable/ic_menu_add" />

    <Button
        android:id="@+id/acceptButton2"
        android:layout_width="62dp"
        android:layout_height="40dp"
        android:layout_below="@+id/totheirlist"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="219dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/imageView"
        android:textSize="10sp"
        card_view:icon="@drawable/star"

        tools:text="Like" />

</RelativeLayout>
</androidx.cardview.widget.CardView>